{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "region": {
      "type": "string"
    },
    "storageSettings": {
      "type": "object"
    },
    "availabilitySetSettings": {
      "type": "object"
    },
    "networkSettings": {
      "type": "object"
    }
  },
  "variables": {},
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "name": "[concat(parameters('storageSettings').name, copyindex())]",
      "apiVersion": "2015-05-01-preview",
      "location": "[parameters('region')]",
      "copy": {
        "name": "dbStoragePoolLoop",
        "count": "[parameters('storageSettings').count]"
      },
      "properties": {
        "accountType": "Standard_LRS"
      }
    },

    {
      "apiVersion": "2015-05-01-preview",
      "type": "Microsoft.Network/virtualNetworks/subnets",
      "name": "[concat(parameters('networkSettings').vnetName, '/', parameters('networkSettings').subnets.dmz.name)]",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[concat('Microsoft.Network/virtualNetworks/', parameters('networkSettings').vnetName)]"
      ],
      "properties": {
        "addressPrefix": "[parameters('networkSettings').subnets.dmz.prefix]"
      }
    },
    {
      "apiVersion": "2015-05-01-preview",
      "type": "Microsoft.Network/virtualNetworks/subnets",
      "name": "[concat(parameters('networkSettings').vnetName, '/', parameters('networkSettings').subnets.zookeeper.name)]",
      "location": "[resourceGroup().location]",    
      "dependsOn": [
        "[concat('Microsoft.Network/virtualNetworks/', parameters('networkSettings').vnetName)]"
      ],
      "properties": {
        "addressPrefix": "[parameters('networkSettings').subnets.zookeeper.prefix]"
      }
    },
    {
      "apiVersion": "2015-05-01-preview",
      "type": "Microsoft.Network/virtualNetworks/subnets",
      "name": "[concat(parameters('networkSettings').vnetName, '/', parameters('networkSettings').subnets.data.name)]",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[concat('Microsoft.Network/virtualNetworks/', parameters('networkSettings').vnetName)]"
      ],
      "properties": {
        "addressPrefix": "[parameters('networkSettings').subnets.data.prefix]"
      }
    },
    {
      "apiVersion": "2015-05-01-preview",
      "type": "Microsoft.Network/virtualNetworks/subnets",
      "name": "[concat(parameters('networkSettings').vnetName, '/', parameters('networkSettings').subnets.monit.name)]",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[concat('Microsoft.Network/virtualNetworks/', parameters('networkSettings').vnetName)]"
      ],
      "properties": {
        "addressPrefix": "[parameters('networkSettings').subnets.monit.prefix]"
      }
    },
    {
      "apiVersion": "2015-05-01-preview",
      "type": "Microsoft.Network/virtualNetworks/subnets",
      "name": "[concat(parameters('networkSettings').vnetName, '/', parameters('networkSettings').subnets.azkaban.name)]",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[concat('Microsoft.Network/virtualNetworks/', parameters('networkSettings').vnetName)]"
      ],
      "properties": {
        "addressPrefix": "[parameters('networkSettings').subnets.azkaban.prefix]"
      }
    },    
    {
      "type": "Microsoft.Compute/availabilitySets",
      "name": "[parameters('availabilitySetSettings').name]",
      "apiVersion": "2015-05-01-preview",
      "location": "[parameters('region')]",
      "properties": {
        "platformFaultDomainCount": "[parameters('availabilitySetSettings').fdCount]",
        "platformUpdateDomainCount": "[parameters('availabilitySetSettings').udCount]"
      }
    }
  ],
  "outputs": {}
}
